package com.zup.proposta.controller;

import org.springframework.beans.factory.annotation.Autowired;

import com.zup.proposta.feignCliente.Cartao;
import com.zup.proposta.modelo.Proposta;

public class ValidaPropostaCliente {
	
	@Autowired
	private CartaoController cartaoController;
	
	public void validaDevolutiva(Proposta proposta) {
		String idProposta = proposta.getId().toString();
		Cartao cartao = new Cartao(proposta.getDocumento(), proposta.getNome(), idProposta);
		cartaoController.validaCartao(cartao);
		
	}

}
