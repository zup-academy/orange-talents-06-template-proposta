package com.zup.proposta.controller;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

@FeignClient(name = "cartoes", url = "http://localhost:8888/api")
public interface AccountsController {

	@RequestMapping(method = RequestMethod.GET, value = "/cartoes")
	String getNumeroCartao(@PathVariable("idProposta") String idProposta);

}
