package com.zup.proposta.feignCliente;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

@FeignClient(name = "/api", url = "http://localhost:9999/swagger-ui/index.html?configUrl=/v3/api-docs/swagger-config#/")
public interface CartoesClient {

	@RequestMapping(method = RequestMethod.GET, value = "/solicitacao")
	Cartao getCartao();
	
	@RequestMapping(method = RequestMethod.POST, value = "/solicitacao", consumes = "application/json")
	Cartao update(Cartao cartao);

}
